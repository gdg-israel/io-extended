.container.clear
  h2 Location
  #mapcontainer
    a(id='location-map-link' href= location.mapUrl) Family DevFest Location Map
    iframe(id='location-map-embed' class='hide', width='568', height='354', frameborder='0', scrolling='no', marginheight='0', marginwidth='0', src= location.mapUrl + '&output=embed')
  .location
    h3 #{location.city}, #{location.state}
    .address
      | #{location.name}
      br
      | #{location.address}
  div
    h2 Hotels
    each hotel in hotels
      .location
        h3 #{hotel.name}
        .address
          | #{hotel.address.street}
          br
          | #{hotel.address.city}, #{hotel.address.state} #{hotel.address.zip}
          br
          | TEL: #{hotel.phoneNumber}
          br
          | FAX: #{hotel.fax}
          br
          a(href= hotel.bookLink) #{hotel.bookText}