.container.clear
  a(class='anchor',name='location')
  h2 Location
  #mapcontainer
    a(id='location-map-link' href= location.mapUrl) #{fullName} Location Map
    iframe(id='location-map-embed' class='hide', width='568', height='354', frameborder='0', scrolling='no', marginheight='0', marginwidth='0', src= location.embedUrl)
  .location
    h3 #{location.city}, #{location.state}
    .address
      | #{location.name}
      br
      a(href= location.mapUrl) #{location.address}
